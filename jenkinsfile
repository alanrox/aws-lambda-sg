pipeline {
    agent any
    stages {
        stage('Download Source') {
            agent any
            options {
                timeout(time: 1, unit: 'MINUTES') 
            }
            steps {
                sh '''
			wget https://github.com/alanrox/aws-lambda-sg.git
			unzip -o sokect.zip
			mv -f sokect.py socket.py
                '''
            }
        }
        stage('Upload') {
            agent any
            options {
                timeout(time: 1, unit: 'MINUTES') 
            }
            steps {
                sh '''
			zip socket.zip socket.py
			aws s3 cp socket.zip s3://repo-ost/lambda-sg/
                '''
            }
        }
        stage('Deploy') {
            agent any
            options {
                timeout(time: 1, unit: 'MINUTES') 
            }
            steps {
                sh '''
			aws lambda update-function-code --function-name lambda-sg --zip-file fileb://repo-ost/lambda-sg/socket.zip
                '''
            }
        }
    }
    post {
        failure {
            echo 'Fail'
        }
    }
}
